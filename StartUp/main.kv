<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None


    Slider:
        id: speedyslide
        value: root.count
        min: 0
        max: 100
        step: 1
        orientation: 'horizontal'
        on_value: root.sliderspeed(self.value)




    SelfUpdatingLabel:
        id: time_label
        size_hint: None, None
        font_size: 30
        update_property: time.now
        update_property_parameters: None
        center_x: root.width * 0.5
        center_y: root.height * 0.45
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0




    Label:
        id:MotorLabel
        text: "motor on"
        size_hint: None, None
        font_size: 50
        x: root.width * 0.1
        y: root.height * 0.735
        color: 0.5, 0.9, 0.4, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0.4, 0.6, 0.2, 0.7


    DPEAButton:
        id:Shutdown
        text: "Shutdown"
        size: 100, 100
        x: root.width * 0.33456
        color: 0.5, 0.9, 0.4, 1
        on_press: root.shutdown()

    Label:
        id:Location
        text: "0,0"
        font_size: 25
        x: root.width * 0.5
        y: root.height * 0.3
        color: 0.2, 0.8, 0.9, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0.4, 0.3, 0.2, 0.7

    DPEAButton:
        text: 'Motor on or off'
        size: 100, 100
        y: root.height * 0.735
        x: root.width * 0.4
        color: 0, 1, 0, 1
        on_press: root.toggleMotor()
        on_press: root.pressed3()

    Label:
        id: mtr
        mDir: 0
        text: 'motor off'
        font_size: 40
        color: .8,.6,1,1
        size: 100, 100
        center_x: root.width * 0.9
        center_y: root.height * 0.9

    DPEAButton:
        id: ChangeDirection
        text: 'Change Direction'
        size: 100, 100
        x: root.width * 0.4
        y: root.height * 0.3
        color: 0, 1, 0, 1
        on_press: root.changedir()








